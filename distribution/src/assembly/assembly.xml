<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/extensions</directory>
            <includes>
                <include>*/*</include>
            </includes>
            <excludes>
                <exclude>mysql-metadata-storage/**</exclude>
            </excludes>
            <outputDirectory>extensions</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/hadoop_dependencies</directory>
            <includes>
                <include>*/*/*</include>
            </includes>
            <outputDirectory>hadoop-dependencies</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>../examples/quickstart/</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>quickstart</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>../examples/conf-quickstart</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/_common</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/_common</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/broker</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/broker</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/coordinator</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/coordinator</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/historical</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/historical</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/overlord</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/overlord</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf-quickstart/middleManager</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf-quickstart/middleManager</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>../examples/conf</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/_common</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/_common</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/broker</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/broker</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/coordinator</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/coordinator</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/historical</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/historical</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/overlord</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/overlord</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/bin</directory>
            <includes>
                <include>*sh</include>
            </includes>
            <fileMode>744</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../examples/conf/middleManager</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>conf/middleManager</outputDirectory>
        </fileSet>

